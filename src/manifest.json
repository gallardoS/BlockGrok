{
  "manifest_version": 3,
  "name": "BlockGrok",
  "version": "0.3",
  "description": "Automatically hides tweets mentioning @grok on X, displays count, and allows toggling visibility.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "icons": {
      "128": "icon128.png"
  },
  "content_scripts": [
      {
          "matches": ["https://twitter.com/*", "https://x.com/*"],
          "js": ["content.js"],
          "run_at": "document_end"
      }
  ],
  "permissions": ["storage", "activeTab", "scripting"]
}
